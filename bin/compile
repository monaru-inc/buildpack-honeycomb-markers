#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

env_dir=$(cd "$3/" && pwd)

# gather environment variables
for key in HONEYCOMB_WRITEKEY HEROKU_APP_NAME HEROKU_RELEASE_VERSION; do
  [[ -f "${env_dir}/${key}" ]] && export "$key=$(cat "${env_dir}/${key}")"
  [[ -z "${!key}" ]] && echo "-----> ${key} is missing or empty: unable to continue." && exit 1
done

# set marker
echo "-----> Creating deploy Honeycomb Marker for ${HEROKU_RELEASE_VERSION}"
curl https://api.honeycomb.io/1/markers/anymo-server \
  -X POST \
  -H "X-Honeycomb-Team: ${HONEYCOMB_WRITEKEY}" \
  -d "{\"message\":\"${HEROKU_APP_NAME}:${HEROKU_RELEASE_VERSION}\", \"type\":\"deploy\"}" \
  >/dev/null

echo "       Done!"
